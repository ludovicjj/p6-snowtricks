{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/card.css') }}">
{% endblock %}

{% block cover %}
    <div class="cover_home text-center" style="background-image: url('{{ asset('image/cover.jpg') }}')">
        <div class="cover_home__title">
            <h1>SNOWTRICKS</h1>
        </div>
        <div class="cover_home__subtitle">
            <p>Ceci est la phrase d'accroche</p>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="custom_title">Liste des figures</h2>

        {# Message Flash de succes add-trick #}
        {% for message in app.session.flashBag.get('add-trick-success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row" id="js_container_trick">
            {% for trick in tricks %}
                {{ include('layout/card.html.twig', {'trick': trick}) }}
            {% endfor %}
        </div>

        <div class=row">
            <div id="container_navigation" class="mt-4"></div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/cover.js') }}"></script>
    <script src="{{ asset('js/pagination.js') }}"></script>
{% endblock %}